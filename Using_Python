def get_consonant_prefix(word):
    consonants = "bcdfghjklmnpqrstvwxyz"
    i = 0
    consonant_prefix = ""
    while (consonants.find(word[i]) > -1):
        consonant_prefix += word[i]
        i += 1
    return consonant_prefix

def get_tail(word):
    consonants = "bcdfghjklmnpqrstvwxyz"
    i = 0
    consonant_prefix = ""
    while (consonants.find(word[i]) > -1):
        consonant_prefix += word[i]
        i += 1
    tail = word[i:]
    return tail

word = "spam"
consonant_prefix = get_consonant_prefix(word)
tail = get_tail(word)

print(consonant_prefix)
print(tail)

pig_word = "placeholder" # Replace this line

print(pig_word)
